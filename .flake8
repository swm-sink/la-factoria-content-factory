[flake8]
max-line-length = 88
# E203: whitespace before ':' - Black handles this
# W503: line break before binary operator - Black handles this
# E501: line too long (82 > 79 characters) - Handled by max-line-length = 88
ignore = E203, W503, E501
exclude =
    .git,
    __pycache__,
    docs/,
    venv/,
    build/,
    dist/,
    *.egg-info,
    frontend/,
    iac/,
    scripts/,
    tests/ # Depending on whether you want to lint tests with same strictness
# Per-file-ignores can be added if specific files need different rules:
# per-file-ignores =
#    app/services/some_legacy_file.py:E501
#    app/utils/generated_code.py:F401,F841
count = True
show-source = True
statistics = True
