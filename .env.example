# Environment variables for AI Content Factory MVP (Development)

# Environment
ENVIRONMENT=development

# Application Settings
APP_PORT=8081  # REQUIRED - Port for the application

# Google Cloud Project
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=us-central1

# Vertex AI / Gemini Configuration
GEMINI_MODEL_NAME=models/gemini-2.5-flash-preview-05-20
GEMINI_API_VERSION=v1
GEMINI_API_KEY=your-gemini-api-key

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# ElevenLabs API (for voice generation)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=aRlmTYIQo6Tlg5SlulGC

# Cloud Tasks Configuration
TASKS_QUEUE_NAME=content-generation-queue
TASKS_WORKER_SERVICE_URL=https://your-cloud-run-url.run.app/internal/v1
CLOUD_TASKS_SERVICE_ACCOUNT=cloud-tasks@your-project.iam.gserviceaccount.com

# Redis Configuration (Local Development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true
REDIS_HEALTH_CHECK_INTERVAL=30

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=AI Content Factory
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Security
API_KEY=your-api-key-for-testing
JWT_SECRET_KEY=your-secret-key-minimum-32-characters-long
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_ALGORITHM=HS256
SENTRY_DSN=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_COST_TRACKING=true
ENABLE_CACHE=true
ENABLE_PARALLEL_PROCESSING=true
ENABLE_QUALITY_METRICS=true

# Cost Control
MAX_COST_PER_JOB=5.0
MAX_TOKENS_PER_REQUEST=5000
MAX_TOKENS_PER_CONTENT_TYPE=1000

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=2
MAX_REFINEMENT_ITERATIONS=2

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000
CACHE_MIN_QUALITY_RETRIEVAL=0.7

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# Monitoring
ENABLE_PROMETHEUS_METRICS=true
PROMETHEUS_PORT=9000
ENABLE_COST_TRACKING=true
ENABLE_PERFORMANCE_TRACKING=true

# Firestore Configuration (using default credentials)
# FIRESTORE_PROJECT_ID=your-gcp-project-id
# FIRESTORE_DATABASE_ID=(default)

# Storage
STORAGE_BUCKET=your-storage-bucket
DATABASE_URL=sqlite:///./app.db

# Content Generation Settings
MAX_GENERATION_TIME=90
MAX_TOTAL_TOKENS=10000
QUALITY_CACHE_TTL=604800
MAX_PARALLEL_REQUESTS=8

# Development Only
# USE_EMULATORS=false
# FIRESTORE_EMULATOR_HOST=localhost:8080
# PUBSUB_EMULATOR_HOST=localhost:8085
